<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/website_item_title"
        android:singleLine="true"
        android:lines="1"
        android:scrollHorizontally="true"
        android:ellipsize="marquee"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff7ffca"
        android:text="@string/titleSite"
        android:textIsSelectable="true"
        android:textSize="18sp"
        android:isScrollContainer="false"
        android:marqueeRepeatLimit="marquee_forever"
        />


    <TextView
        android:singleLine="true"
        android:lines="1"
        android:scrollHorizontally="true"
        android:ellipsize="marquee"
        android:focusable="false"
        android:paddingLeft="10dp"
        android:id="@+id/website_item_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/linkSite"
        android:textSize="10sp"
        android:textColor="#ffffff"
        android:autoLink="web"/>

    <TextView
        android:id="@+id/website_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/webDescription"
        android:textSize="12sp"
        android:textColor="#ffffff"/>

</LinearLayout>